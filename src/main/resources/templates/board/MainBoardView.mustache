<script>
    // 페이지 로드 시 초기화 함수 호출
    window.addEventListener("load", initialize);

    function initialize() {
        // 현재 URL 가져오기
        var currentURL = window.location.href;

        // 모든 페이지 버튼의 클래스 제거
        var pageButtons = document.getElementsByClassName("num");

        for (var i = 0; i<pageButtons.length; i++) {
            pageButtons[i].classList.remove("on");

            // 현재 URL과 버튼의 링크 주소 비교하여 일치하는 경우, 클래스 추가
            if (currentURL.includes(pageButtons[i].getAttribute("href"))) {
                pageButtons[i].classList.add("on");
            }
        }
    }

    function changePage(pageNumber) {
        // 모든 페이지 버튼의 클래스 제거
        var pageButtons = document.getElementsByClassName("num");

        for (var i = 0; i<pageButtons.length; i++) {
            pageButtons[i].classList.remove("on");
        }

        // 선택한 페이지 버튼에 클래스 추가
        var selectedButton = document.getElementById("page-" + (pageNumber + 1));
        selectedButton.classList.add("on");
    }
    function changePage(pageNumber) {
        // 현재 페이지 URL에서 "page" 매개변수 값을 가져옴
        const urlParams = new URLSearchParams(window.location.search);
        const currentPage = parseInt(urlParams.get('page'));

        let nextPage;

        if (pageNumber === 1) {
            // "<" 버튼을 눌렀을 때 이전 페이지로 이동
            nextPage = currentPage - 1;

            if (nextPage < 0) {
                nextPage = 0; // 현재 페이지 유지
            }
        } else if (pageNumber === 5) {
            // ">" 버튼을 눌렀을 때 다음 페이지로 이동
            nextPage = currentPage + 1;
        } else {
            // 숫자 버튼일 경우 해당 번호의 페이지로 이동
            nextPage = pageNumber;
        }
        // 새로운 URL 생성 및 이동
        const newURL = '/board?page=' + nextPage;
        window.location.href = newURL;
    }
</script>

