    {

            // 비밀번호 일치 불일치
            $('#newRe-enterPW').keyup(function () {
                let pw = document.querySelector("#newPW").value;
                let rePw = document.querySelector("#newRe-enterPW").value;

                    if (pw !== "" || rePw !== "") {
                        if (pw !== rePw) {
                            $("#checkPw").html('Password do not match');
                            $("#checkPw").css('color', '#dc3545');
                            $("#newRe-enterPW").removeClass("is-valid");
                            $("#newRe-enterPW").addClass("is-invalid");
                        } else {
                            // 비밀번호가 일치할 때 fetch 요청 보내기
                            const url = "signup/SignUpPage";
                            fetch(url, {
                                method: "POST",
                                body: JSON.stringify(),
                                headers: {
                                    "Content-Type": "application/json"
                                }
                            }).then(response => response.json()) // 응답을 JSON 형태로 변환
                                    .then(data => {
                                        if (data.match) {
                                            $("#checkPw").html('Password is match');
                                            $("#checkPw").css('color', '#2fb380');
                                            $("#newRe-enterPW").addClass("is-valid");
                                            $("#newRe-enterPW").removeClass("is-invalid");
                                        } else {
                                            $("#checkPw").html('Password do not match');
                                            $("#checkPw").css('color', '#dc3545');
                                            $("#newRe-enterPW").removeClass("is-valid");
                                            $("#newRe-enterPW").addClass("is-invalid");
                                        }
                                    })
                                    .catch(error => {
                                        console.error("Error:", error);
                                    });
                        }
                    }
                });

    }

