<html>
<head>
    <style>
        /*<!-- 섹션크기 -->*/
        .bg-light {
            height: 1053px;
            padding-top: 55px;
            padding-bottom: 75px;
        }

        /*<!-- 입력창 -->*/
        .container.py-4 {
            margin: 0 auto;
            width: 503px;
        }

        /*<!-- 회원가입 버튼 -->*/
        .d-grid.gap-2 {
            padding-top: 30px;
        }

        /*<!-- 생년월일 -->*/
        .bir_yy, .bir_mm, .bir_dd {
            width: 160px;
            display: table-cell;
        }

        .bir_yy, .bir_mm, .bir_dd {
            padding-left: 10px;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="css/styles.css" rel="stylesheet"/>
    <title> SignUp </title>
</head>
<body>
<section class="bg-light">
    <div class="container py-4">
        <div class="row align-items-center justify-content-between">
            <a class="navbar-brand hi text-center" href="/signup">
                <span class="text-dark h4"> Create </span> <span class="text-primary h4"> Account </span>
            </a>
        </div>
        <div>
            <!-- 아이디 입력 -->
            <div class="form-group">
                <label for="exampleInputEmail1" class="form-label mt-4"> ID(email) </label>
                <input type="text" class="form-control" id="newID" aria-describedby="emailHelp">
            </div>
            <div class="form-group has-success">
                <!-- 비밀번호 입력 -->
                <label class="form-label mt-4" for="inputValid"> PW </label>
                <input type="password" class="form-control is-valid" id="newPW">
                <div class="valid-feedback"></div>
            </div>
        </div>
        <div class="form-group has-danger">
            <!-- 비밀번호 재확인 입력 -->
            <label class="form-label mt-4" for="inputInvalid"> Re-enter PW </label>
            <input type="password" class="form-control is-invalid" id="newRe-enterPW">
            <div class=”invalid-feedback”> Passwords do not match</div>
        </div>
        <div class="form-group">
            <!-- 닉네임 입력 -->
            <label for="exampleInputEmail1" class="form-label mt-4"> NickName </label>
            <input type="text" class="form-control" id="newNickName" aria-describedby="emailHelp">
        </div>
        <div class="d-grid gap-2">
            <!-- 회원 가입 버튼 -->
            <button class="btn btn-primary btn-lg" type="signUpButton"> Sign UP </button>
        </div>
        </form>
    </div>
</section>

</body>
</html>

<script>
    {
        // Sign Up 버튼 변수화
        const userInfoBtn = document.querySelector("#signUpButton");

        // 버튼 클릭 이벤트 감지
        userInfoBtn.addEventListener("click", function () {
            const userInfo = {
                id: document.querySelector("#newID").value,
                pw: document.querySelector("#newPW").value,
                Re_enterPW: document.querySelector("#newRe-enterPW").value,
                nickname: document.querySelector("#newNickName").value
            }

        });
    }


</script>

